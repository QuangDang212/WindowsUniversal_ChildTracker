<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChildTracker.Styles">
    <Style TargetType="Button" x:Name="LogoutButton">
        <Setter Property="Content" Value="Logout"/>
        <Setter Property="FontSize" Value="35" />
        <Setter Property="Width" Value="170" />
        <Setter Property="Height" Value="90" />
        <Setter Property="Padding" Value="0 0 0 8" />
        <Setter Property="Margin" Value="20 20 0 0"/>
    </Style>
    <Style TargetType="TextBlock" x:Name="MessageToUser">
        <Setter Property="FontSize" Value="50" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="50 200 50 0" />
    </Style>
</ResourceDictionary>
