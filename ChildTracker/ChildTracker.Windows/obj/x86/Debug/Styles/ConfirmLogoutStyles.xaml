<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChildTracker.Styles">
    <Style TargetType="Grid" x:Name="ConfirmLogoutGrid">        
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="500"/>
    </Style>
    <Style TargetType="TextBlock" x:Name="ConfirmationMessage">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Padding" Value="0 40 0 0"/>
    </Style>
    <Style TargetType="PasswordBox" x:Name="ConfirmationInput">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Margin" Value="50 50 50 50"/>
    </Style>
    <Style TargetType="Button" x:Name="Buttons">
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="Margin" Value="80 30 50 30"/>
    </Style>
</ResourceDictionary>

