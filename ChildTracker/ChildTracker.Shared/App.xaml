<Application
    x:Class="ChildTracker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChildTracker">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <x:String x:Key="LoggedChildDeviceMessage">This device will monitor the location of your child in an interval of 30 minutes!</x:String>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/LoginSignupStyles.xaml"/>
                <ResourceDictionary Source="Styles/ParentDeviceViewStyle.xaml"/>
                <ResourceDictionary Source="Styles/ChildDeviceViewStyles.xaml"/>
                <ResourceDictionary Source="Styles/ConfirmLogoutStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
