<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChildTracker.Styles">
    <Style TargetType="Grid" x:Name="ConfirmLogoutGrid">
    </Style>
    <Style TargetType="TextBlock" x:Name="ConfirmationMessage">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Padding" Value="0 120 0 0"/>
    </Style>
    <Style TargetType="PasswordBox" x:Name="ConfirmationInput">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Margin" Value="50 50 50 50"/>
    </Style>
    <Style TargetType="Button" x:Name="Buttons">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Margin" Value="50 -150 0 150"/>
        <Setter Property="Padding" Value="20 10 20 15"/>
    </Style>
</ResourceDictionary>

